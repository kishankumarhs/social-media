{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true
  },
  "generateDefaults": {
    "module": {
      "flat": false,
      "path": "modules"
    },
    "controller": {
      "flat": false,
      "path": "modules"
    },
    "service": {
      "flat": false,
      "path": "modules"
    }
  }
}
